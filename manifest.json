{
  "manifest_version": 3,
  "name": "YouTube Shooting",
  "version": "1.0.0",
  "description": "Transform YouTube comments into a danmaku shooting game!",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "src/utils/config.js",
        "src/utils/storage.js",
        "src/utils/sound-manager.js",
        "src/utils/share-manager.js",
        "src/utils/i18n.js",
        "src/api/youtube-api.js",
        "src/api/ai-analyzer.js",
        "src/game/collision.js",
        "src/game/player.js",
        "src/game/skin-manager.js",
        "src/game/achievement-manager.js",
        "src/game/danmaku-engine.js",
        "src/game/game.js",
        "src/content/overlay.js",
        "src/content/ui.js",
        "src/content/main.js"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/sprites/*",
        "assets/achievements/*",
        "SE/*"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ]
}
